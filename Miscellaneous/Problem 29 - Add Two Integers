class Solution {
public:
    int divide(long dividend, long divisor) {
        
        if(divisor == INT_MIN) // handling base cases
        {
             if(dividend  == INT_MIN)
                 return 1;
            
              return 0;
        }
        
        if(divisor == 1)
        return dividend; 
        
        if(divisor == -1)
        {
            if(dividend == INT_MIN)
                return INT_MAX;
            
            return -1* dividend;
        }
        
        long count = 0;
        int sign = dividend>=0?1:-1;
        sign*= (divisor>0?1:-1);
        
        dividend  = abs(dividend);
        divisor = abs(divisor);
        
        while(divisor <= dividend)
        {
              count++;
              dividend-=divisor;
        }
        
        return count* sign;
    }
};
